div.monster-info(ng-controller='MainController')
  nav
    .d-flex.md-size
      h1.flex-item.full-width
        a(href='#!/')
          | PAD
          font(color='#E84855')  EVO
      .flex-item.full-width
        .vertical-center.fixed-right.center
          select.monster-dropdown(name='monster_id', ng-controller='SearchController')
          
      
  div.md-size.d-flex.content.justify-center
    //- .flex-item.center
    //-   div
    //-     object.full-height(type='image/svg+xml', style='transform: scaleX(-1);', data='/images/final_tyran.svg')
        
    .flex-item
      - var total = 0;
      - var count = -1;
      .evo-data
        .center(style='border-bottom : 2px solid black;')
          img.header-image(src='/images/' + id + '.png' alt="...")
          h2.monster-name= title
        if (monster !== undefined && base !== key)
          h3 Required evolution materials
          .materials-container
            each val,key in monster
                - count++;
                - total = total + val
                  .evo_material(ng-click='showHint(#{count})')
                    img(ng-repeat='i in getNumber(#{val}) track by $index', src= '/images/' + key +'.png' alt="...", style='z-index:-1;')
                    .tip-wrapper
                      h4(class='new', ng-init='saveMonsterHint(#{key})') x#{val} 
          h3 Total box space: #{total}
        else
          h3.center No materials required! 
